@model CreateProductViewModel
@{
    int index = (int)ViewData["VariantID"];
}
<div class="row">
    <div class="col-2">
        <div class="form-group">
            <label>Name</label>
            <input asp-for="Variants[index].Name" class="form-control" />
            <span asp-validation-for="Variants[index].Name"></span>
        </div>
    </div>
    <div class="col-2">
        <div class="form-group">
            <label>Description</label>
            <input asp-for="Variants[index].Description" class="form-control" />
            <span asp-validation-for="Variants[index].Description"></span>
        </div>
    </div>
    <div class="col-2">
        <div class="form-group">
            <label>Stock</label>
            <input asp-for="Variants[index].Stock" class="form-control" />
            <span asp-validation-for="Variants[index].Stock"></span>
        </div>
    </div>
    <div class="col-2">
        <div class="form-group">
            <label>Price</label>
            <input asp-for="Variants[index].Price" class="form-control" />
            <span asp-validation-for="Variants[index].Price"></span>
        </div>
    </div>
    <div class="col-4">
        <div class="form-group">
            <label>Variant Images</label>
            <input asp-for="Variants[index].Images" class="form-control" />
            <span asp-validation-for="Variants[index].Images"></span>
        </div>
    </div>
</div>
<div class="row CreateVariantPlaceHolder">
    <div class="col-12">
        <a class="btn btn-default btn-block" onclick="btnAddVariant(@index + 1)" >Add variant</a>
    </div>
</div>