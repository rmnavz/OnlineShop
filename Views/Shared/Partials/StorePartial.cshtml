@model StoreModel

    <div class="col-12 col-sm-12 col-md-4 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@Model.Name</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <p>@Model.Description</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <a class="btn btn-default" asp-controller="Product" asp-action="List" asp-route-storeID="@Model.ID">View Products</a>
                    </div>
                </div>
            </div>
        </div>
    </div>