@model ProductModel

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Update @Model.Name</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Product" asp-action="Update" method="POST" class="" role="form">
                    @Html.HiddenFor(m => Model.ID)
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>Description</label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <input type "submit" class="btn btn-default btn-block" value="Return" asp-controller="Product"  asp-action="List" />
                                <input type="submit" class="btn btn-primary btn-block" value="Create" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>